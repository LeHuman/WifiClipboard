<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/mainIcon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/main_icon"
        android:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/ConnectionStandby"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:contentDescription="@string/connection_status"
        android:contextClickable="false"
        android:tint="#2196F3" />

    <ImageView
        android:id="@+id/ConnectionReady"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:contentDescription="@string/connection_status"
        android:contextClickable="false"
        android:tint="#4CAF50"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/ConnectionWaiting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:contentDescription="@string/connection_status"
        android:contextClickable="false"
        android:tint="#FFEB3B"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/ConnectionError"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:contentDescription="@string/connection_status"
        android:contextClickable="false"
        android:tint="#F44336"
        android:visibility="invisible" />

</RelativeLayout>
